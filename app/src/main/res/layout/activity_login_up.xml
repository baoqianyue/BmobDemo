<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/activity_loginup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_up_username_hint"
        android:inputType="text"/>

    <EditText
        android:id="@+id/activity_loginup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_up_password_hint"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/activity_loginup_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_up_password_again_hint"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/activity_loginup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_up_email_hint"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/activity_loginup_login_up_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:text="注册"
        android:textSize="16dp"/>

</LinearLayout>